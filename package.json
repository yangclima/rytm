{
  "name": "rytm",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && next dev -p 3000 && npm run services:stop",
    "test": "npm run services:up && npm run services:wait:database && concurrently -n next,jest --hide next -s command-jest -k \"next dev\" \"jest --runInBand --verbose\" && npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "build": "next build",
    "start": "next start",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "eslint",
    "prepare": "husky",
    "commit": "cz",
    "pre-commit": "lint-staged",
    "services:up": "docker compose -f './src/infra/compose.yaml' up -d",
    "services:stop": "docker compose -f './src/infra/compose.yaml' stop",
    "services:down": "docker compose -f './src/infra/compose.yaml' down",
    "services:wait:database": "node ./src/infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate create -m ./src/infra/migrations",
    "migrations:up": "node-pg-migrate up -m ./src/infra/migrations -t 'pgmigrations'"
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "concurrently": "9.2.1",
    "dotenv": "17.2.2",
    "next": "15.5.3",
    "next-connect": "1.0.0-next.4",
    "node-pg-migrate": "7.6.1",
    "pg": "8.16.3",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "swr": "2.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/eslintrc": "3",
    "@tailwindcss/postcss": "4",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9",
    "eslint-config-next": "15.5.3",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.0.1",
    "husky": "9.1.7",
    "jest": "30.1.3",
    "lint-staged": "16.1.6",
    "prettier": "3.6.2",
    "tailwindcss": "4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
